version: '3.8'
services:
    specterhwi:
        image: lncm/specter-desktop:v0.10.0
        container_name: specter-desktop
        network_mode: host
        ports:
            - "25441:25441"
        restart: on-failure
        stop_grace_period: 5m30s
        privileged: true
        command: --hwibridge
        volumes:
            - "${PWD}/data:/data/.specter"
            - "/dev:/dev"
            - "/etc/udev:/etc/udev"
